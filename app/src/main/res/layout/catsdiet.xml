<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3D9F4"
    tools:context=".JohorActivityVet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="476dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <!-- Text View to display Course Name -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="142dp"
                android:layout_margin="20dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/catdiet1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="170dp"
                android:text="Dry Food"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Text VIew to display Course Rating -->
            <!-- Image used in present in drawable folder -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="200dp"
                android:drawablePadding="2dp"
                android:text="Dry food contains between six and 10 percent water. Depending on the specific formulation, a mixture of ingredients are combined, extruded, and dried into bite-sized pieces. Ingredients may include:

\n\n - meat and/or meat byproducts
\n - poultry and/or poultry byproducts
\n - grain and/or grain byproducts
\n - fish meal
\n - fiber sources
\n - milk products
\n - vitamin and mineral supplements"
                android:textColor="@color/black" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="469dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="352dp"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/catdiet2" />

            <!-- Text View to display Course Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="180dp"
                android:text="Semi-Moist Food"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Text VIew to display Course Rating -->
            <!-- Image used in present in drawable folder -->
            <TextView
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="210dp"
                android:drawablePadding="2dp"
                android:text="Meat and meat byproducts are the primary ingredients of semi-moist food, which contains approximately 35 percent moisture. Other materials, including soybean meal, cereals, grain byproducts, and preservatives are added to make the final product. \n\nThe cost of semi-moist food is generally mid-range. Semi-moist foods may be more appealing than dry cat food to some cats and can also be fed free choice. After the package is opened, however, the food can dry out, becoming less palatable and/or becoming rancid."
                android:textColor="@color/black" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="561dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="352dp"
                android:layout_height="142dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/catdiet3" />

            <!-- Text View to display Course Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="160dp"
                android:text="Canned Food"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Text VIew to display Course Rating -->
            <!-- Image used in present in drawable folder -->
            <TextView
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="190dp"
                android:drawablePadding="2dp"
                android:text="Canned cat food has a moisture content of at least 75 percent, making it a good dietary source of water. It is generally the most expensive type of cat food, but is also highly palatable for most cats. Many different varieties are available, which can be helpful if your cat is a finicky eater. \n\nCanned food has the longest shelf life when unopened, but any unused portion of opened canned cat food should be refrigerated to maintain quality and prevent spoilage. \n\nGourmet canned cat foods generally feature meats, such as kidney or liver, and whole meat byproducts as primary ingredients. Some brands, however, may be nutritionally incomplete, and it is important to read the nutrition labels carefully on such specialty cat-food items to ensure that they have a nutritional guarantee."
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="584dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/johorclinic4"
                android:layout_width="354dp"
                android:layout_height="167dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/catdiet4" />

            <!-- Text View to display Course Name -->
            <TextView
                android:id="@+id/namejohorclinic4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="180dp"
                android:layout_toEndOf="@id/johorclinic4"
                android:text="Homemade Recipe"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Text VIew to display Course Rating -->
            <!-- Image used in present in drawable folder -->
            <TextView
                android:id="@+id/johorclinic4rating"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/namejohorclinic4"
                android:layout_marginStart="20dp"
                android:layout_marginTop="210dp"
                android:layout_toEndOf="@id/johorclinic4"
                android:drawablePadding="2dp"
                android:text="Ingredients:

\n2 lbs. (907g) ground meat, cooked
\n½ cup (53.3g) EZComplete Fur Cats
\n1 ½ cups (12 oz.) water
\n\nInstructions:

\n1. Place the ground meat in a slow cooker.
\n2. Add ¼ cup of water per pound of meat then cover the cooker with the lid.
\n3. Cook on low heat for 4-6 hours until the meat is cooked through.
\n4. Let the meat cool then shred or finely chop it into bite-sized pieces.
\n5. Stir in the EZComplete until it is thoroughly mixed in.
\n6. Divide the mixture into individual portions—try to divide the cooking juices as evenly as possible.
\n7. Refrigerate or freeze the portions in airtight containers and feed as desired."
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>