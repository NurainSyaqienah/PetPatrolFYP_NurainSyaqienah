<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3D9F4"
    tools:context=".JohorActivityVet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="628dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <!-- Text View to display Course Name -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="142dp"
                android:layout_margin="20dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/hamdiet1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="170dp"
                android:text="A balanced diet for hamsters"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Text VIew to display Course Rating -->
            <!-- Image used in present in drawable folder -->
            <TextView
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="200dp"
                android:drawablePadding="2dp"
                android:text="In the wild, hamsters naturally eat a mixture of seeds, cereals, insect larvae and larger insects such as crickets. As pets, hamsters need a good-quality, balanced and varied diet containing all the essential nutrients and minerals they need.

\n\nThey can get this from:

\n\nA compound pellet ration or mixture of different seeds formulated to meet their needs.
\n\nSmall quantities of greens, cleaned root vegetables and pieces of fruit such as apples.
\n\nPut their food in flat dishes or directly on the cage floor. If in a dish, expect them to turn it over to transfer the contents to their larder. \n\nThey carry food in their cheek pouches and can be seen retreating from their food with bulging cheeks. They like to sit up and hold pieces of food to gnaw."
                android:textColor="@color/black" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="469dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="352dp"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/hamdiet2" />

            <!-- Text View to display Course Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="180dp"
                android:text="Wet or powdered food for hamsters"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Text VIew to display Course Rating -->
            <!-- Image used in present in drawable folder -->
            <TextView
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="210dp"
                android:drawablePadding="2dp"
                android:text="You should only give your hamster wet or powdered food if you're advised to by your vet, for example because of dental problems.

\n\nWet food can be difficult to clean from the cage, and it's susceptible to mould and bacteria growth, which can be harmful to your hamster. If your hamster is sick and needs wet food, it's important to remove all traces of it at least twice a day to ensure the food doesn't start to rot."
                android:textColor="@color/black" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="314dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="352dp"
                android:layout_height="142dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/hamdiet3" />

            <!-- Text View to display Course Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="160dp"
                android:text="Poisonous Food"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Text VIew to display Course Rating -->
            <!-- Image used in present in drawable folder -->
            <TextView
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="190dp"
                android:drawablePadding="2dp"
                android:text="Don't give them grapes or rhubarb, as these can be poisonous to rodents."
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>