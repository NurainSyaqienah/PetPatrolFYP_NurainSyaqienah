            <!-- Text View to display Course Name -->
            <TextView
                android:id="@+id/namejohorclinic6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="170dp"
                android:layout_toEndOf="@id/johorclinic6"
                android:text="Campbell's Dwarf Hamster"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Text VIew to display Course Rating -->
            <!-- Image used in present in drawable folder -->
            <TextView
                android:id="@+id/johorclinic6rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/namejohorclinic6"
                android:layout_marginStart="20dp"
                android:layout_marginTop="200dp"
                android:layout_toEndOf="@id/johorclinic6"
                android:drawablePadding="2dp"
                android:text="Length: \n2 - 4 inches\n\nWeight:\n1 - 2 ounces\n\nLifespan:\n1 - 2 years"
