<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3D9F4"
    tools:context=".JohorActivityVet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp"
            app:cardElevation="8dp"
            android:paddingBottom="200dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginTop="30dp"
                android:text="ABOUT HAMSTERS"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:textStyle="bold">

            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="606dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <!-- Text View to display Course Name -->

            <ImageView
                android:id="@+id/johorclinic1"
                android:layout_width="340dp"
                android:layout_height="160dp"
                android:layout_margin="20dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/hamster1" />

            <!-- Text VIew to display Course Rating -->
            <!-- Image used in present in drawable folder -->
            <TextView
                android:id="@+id/johorclinic1rating"
                android:layout_width="342dp"
                android:layout_height="320dp"
                android:layout_below="@id/namejohorclinic1"
                android:layout_gravity="clip_vertical|fill_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="200dp"
                android:drawablePadding="2dp"
                android:lineSpacingExtra="8px"
                android:text="Hamsters are small rodents that are commonly kept as house pets. They are distinguishable from other rodents due to their short tails, stubby legs and small ears. Hamsters have many different colors, including black, grey, brown, white, yellow, red or a mixture of several colors.\n\nThe first hamsters were discovered in Syria, according to the book ‘The Hamster’, though they also live in Greece, Romania, Belgium and northern China. In the wild, they like to live in warm, dry areas, like steppes, sand dunes and the edges of deserts, according to World Atlas."
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="827dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginTop="30dp"
                android:text="hamster breeds"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="256dp"
                android:paddingStart="50dp"
                android:paddingTop="80dp"
                android:src="@drawable/hamster2">

            </ImageView>

            <TextView
                android:layout_width="338dp"
                android:layout_height="377dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="290dp"
                android:lineSpacingExtra="8px"
                android:text="There are 24 species of hamsters, according to the Universities Federation for Animal Welfare, and these animals come in a wide range of sizes. The European breed can grow as large as 12.5 inches (32 centimeters) long and are some of the biggest varieties of hamsters, according to the journal Biomarkers in Toxicology.

\n\nThe dwarf hamster lives up to its name. These tiny hamsters grow to around 2 to 4 inches (5.5 to 10.5 cm) long, according to AZ animals. The most common pet hamster, the Syrian hamster, also known as the teddy bear hamster or golden hamster, usually grows to about 6 inches (15.24 cm) long."
                android:textColor="@color/black"
                android:textSize="16sp">

            </TextView>

            <Button
                android:id="@+id/hambreed"
                android:layout_width="112dp"
                android:layout_height="52dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="690dp"
                android:text="MORE INFO">

            </Button>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="639dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginTop="30dp"
                android:text="hamsters DIET"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:layout_width="341dp"
                android:layout_height="256dp"
                android:paddingStart="40dp"
                android:paddingTop="80dp"
                android:src="@drawable/hamster3">

            </ImageView>

            <TextView
                android:layout_width="338dp"
                android:layout_height="192dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="290dp"
                android:lineSpacingExtra="8px"
                android:text="Hamsters like to eat seeds, grains, nuts, cracked corn, fruits and vegetables, according to the Hamster Society Singapore. Wild hamsters also eat insects, frogs, lizards and other small animals. A captive hamster's diet should be at least 16 percent protein and 5 percent fat, according to Canadian Federation of Humane Societies."
                android:textColor="@color/black"
                android:textSize="16sp">

            </TextView>

            <Button
                android:id="@+id/hamdiet"
                android:layout_width="112dp"
                android:layout_height="52dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="510dp"
                android:text="MORE INFO">

            </Button>


        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>